#  /____/_/|_/_/ /_/_/|_|\__,_/
# simple X hotkey daemon runtime config.
#
# Unbound hotkeys:
# 0th row: F1 F2 F6
# 1st row: W  E  P
# 2nd row: A  D
# 3rd row: Z  x  v  C
# Insert Scroll_Lock XF86Launch1


# ********** help **********
# Show sxhkd keybindings
super + F1
	$TERMINAL -e sh -c "$HOME/.local/bin/uitools/keybinds | less"


# ********** Programs **********
# Terminal at $HOME ($TERMINAL env variable is the symlink /usr/bin/terminal)
super + Return
	$TERMINAL

# Terminal at the same directory as focused window
super + shift + Return
	"$HOME/.local/bin/termtools/samedir"

# Rofi run mode
super + r
	rofi -modi combi -combi-modi drun,run -show combi

# Rofi window mode
super + w
	rofi -show window

# Rofi ssh
super + z
	rofi -show ssh

# File manager ($FILE env variable)
super + f
	$TERMINAL -e $FILE

# Web browser ($BROWSER env variable)
super + b
	$BROWSER

# Web search
super + s
	"$HOME"/.local/bin/uitools/qb-open -s

# Go to web bookmark
super + g
	"$HOME"/.local/bin/uitools/qb-open -b

# newsboat rss reader
super + n
	$TERMINAL -e newsboat

# Music (ncmpcpp)
super + m
	$TERMINAL -e ncmpcpp

# Audio (pulsemixer)
super + a
	$TERMINAL -e pulsemixer

# Htop
super + i
	$TERMINAL -e htop

# Toggle nord
super + F7
	"$HOME/.local/bin/nettools/nord-toggle"

# Toggle transmission daemon
super + F8
	"$HOME/.local/bin/uitools/td-toggle"

# Transmission frontend tui
super + t
	$TERMINAL -e tremc

# Vimwiki
# super + v
# 	$TERMINAL -e $EDITOR -c 'VimwikiIndex'

# Intercheck - polls every second until the internet is up
super + F11
	"$HOME/.local/bin/nettools/intercheck"

# Network Manager interface
super + F12
	$TERMINAL -e sudo -A nmtui

# dropdown julia REPL (aka calculator)
super + c
	tdrop -ma -x '25%' -y '25%' -w '50%' -h '50%' -p 'bspc rule -a xst-256color -o state=floating' -n 'julia' -f '-n julia -e julia' xst

# Dropdown terminal
super + e
	tdrop -ma -x '25%' -y '25%' -w '50%' -h '50%' -p 'bspc rule -a xst-256color -o state=floating' -n 'xst' xst


# ********** Window Manager (BSPWM) **********
# Close window
super + q
	bspc node -c

# Focus on window in direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# Focus on window in direction
super + {Left,Down,Up,Right}
	bspc node -f {west,south,north,east}

# Focus on desktop
super + {0-9}
	bspc desktop -f {0-9}

# Cycle through desktops
super + {u,d}
	bspc desktop -f {prev, next}

# Swap window with direction
super + shift + {h,j,k,l}
	bspc node -s {west,south,north,east}

# Swap window with direction
super + shift + {Left,Down,Up,Right}
	bspc node -s {west,south,north,east}

# Send window to desktop/workspace
super + shift + {0-9}
	bspc node -d {0-9}

# Rotate the tree from the current nodes parent
super + shift + {u,d}
	bspc node @parent -C {forward, backward}

# Toogle focus between floating and tiled
super + space
	notify-send 'implement float/tile focus toggle'

# Toggle floating on and off
super + shift + o
	bspc node focused.tiled -t floating || bspc node focused.floating -t tiled

# Flip the tree from the current nodes parent
#super + {h,j,k,l}
#  bspc node @parent -F {vertical,horizontal,horizontal,vertical}

# Toggle fullscreen on and off
super + shift + f
	"$HOME/.local/bin/uitools/bspwmfullscreen"

# Expand a window by moving one of its side outward
#ctrl + alt + {h,j,k,l}
#	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}


# ********** Device Control **********
# Lock session
super + y
	prompt 'Lock session?' 'xsecurelock'

# Logout session
super + shift + y
	prompt 'Logout computer?' 'bspc quit'

# Reboot computer
super + shift + BackSpace
	prompt 'Reboot computer?' 'sudo -A reboot'

# Shutdown computer
super + shift + x
	prompt 'Shutdown computer?' 'sudo -A shutdown -h now'

# Switch graphics (nvidia<->hybrid)
super + shift + n
	prompt 'switch graphics?' "$HOME"/.local/bin/gfxtools/gfxswitch

# Change display
super + F3
	displayselect

# LUKS unlock and mount a USB drive or Android device
super + F9
	$TERMINAL -e rluksopen && rmount

# Unmount and LUKS lock a USB drive or Android device
super + F10
	rumount && rluksclose

# Mute audio
super + shift + m
	lmc mute

# Mute audio
XF86AudioMute
	lmc mute

# Toggle pause/play audio
super + {_,shift +} p
	lmc {toggle,pause}

# Toggle pause/play audio
XF86AudioPlay
	lmc toggle

# Toggle pause/play audio
XF86AudioStop
	lmc toggle

# Change to next/previous tracks
super + {comma,period}
	lmc {prev,next}

# Change to next/previous tracks
XF86AudioPrev
	lmc prev

# Change to next/previous tracks
XF86AudioNext
	lmc next

# Restart track
super + shift + less
	lmc replay

# Increase volume
super + {equal,plus}
	lmc up {10,25}

# Increase volume
XF86AudioRaiseVolume
	lmc up 10

# Decrease volume
super {_,shift +} + minus
	lmc down {10,25}

# Decrease volume
XF86AudioLowerVolume
	lmc down 10

# Seek foward in song
super + {_,shift +} bracketright
	lmc forward {10,120}

# Seek foward in song
XF86AudioForward
	lmc forward 10

# Seek backward in song
super + {_,shift +} bracketleft
	lmc back {10,120}

# Seek backward in song
XF86AudioRewind
	lmc back 10

# Brightness Up
XF86MonBrightnessDown
	light -U 15

# Brightness Down
XF86MonBrightnessUp
	light -A 15


# ********** Miscellaneous **********
# Show clipboard
super + shift + v
	show-clipboard

# Choose emoji
super + grave
	runicode

# Take screenshot
Print
	maim pic-full-$("$HOME/Pictures/"date '+%y%m%d-%H%M-%S').png

# Pick screenshot type
shift + Print
	maimpick

# Record audio or video
#super + Print
#	dmenurecord

# Kill active recording
#super + Delete
#	dmenurecord kill

# Hibernate
super + F4
	prompt 'Hibernate computer?' 'sudo systemctl suspend'

# Restart/rescan wifi/eth networks
super + F5
	sudo -A systemctl restart NetworkManager

