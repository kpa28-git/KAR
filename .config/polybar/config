label-separator-foreground = ${colors.foreground-alt}
menu-0-0 = logout
menu-0-0-exec = $XDG_SCRIPT_HOME/gfxtools/logoutldm
menu-0-1 = reboot
menu-0-1-exec = sudo -A reboot
menu-0-2 = shutdown
menu-0-2-exec = sudo -A shutdown -h now


