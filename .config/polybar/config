[module/powermenu]
type = custom/menu
expand-right = true
format-spacing = 1
label-open = %{T5}Ô§§%{T-}
label-open-foreground = ${colors.linecolor}
label-close = %{T5}Ô™¨%{T-} cancel
label-close-foreground = ${colors.secondary}
